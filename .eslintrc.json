{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "brace-style": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "no-var": "off",
    "operator-linebreak": 1,
    "no-trailing-spaces": 1,
    "camelcase": 1,
    "comma-dangle": 0,
    "require-jsdoc": "off",
    "max-len": ["error", 120, 4]
  },
  "globals": {
    "Polymer": true
  }
}